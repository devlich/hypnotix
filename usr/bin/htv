#!/bin/sh

CACHEDIR="${XDG_CACHE_HOME:-$HOME/.cache}"
mkdir -p "${CACHEDIR}"/htv/favorites
touch "${CACHEDIR}"/htv/favorites/list

mkdir -p "${CACHEDIR}"/htv/yt-dlp
if [ $(gsettings get fr.hitch.htv use-local-ytdlp) = true ]
then
	echo "Local version of yt-dlp selected."
	export PATH="${CACHEDIR}/htv/yt-dlp:${PATH}"
else
	echo "System version of yt-dlp selected."
fi

/usr/lib/htv/hypnotix.py &
